<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="FlipView" TargetType="FlipView">
        <Setter Property="MaxHeight" Value="450" />
        <Setter Property="Width" Value="300" />
    </Style>

    <DataTemplate x:Key="FlipPosterTemplate">
        <Image Source="{Binding FilePath, Converter={StaticResource ImagePathToFullPathConverter}, ConverterParameter=Poster}" Stretch="UniformToFill" />
    </DataTemplate>

</ResourceDictionary>
