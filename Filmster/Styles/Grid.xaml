<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls">

    <Style x:Key="AdaptiveGridItem" TargetType="controls:AdaptiveGridView">
        <Setter Property="DesiredWidth" Value="240" />
        <Setter Property="ItemHeight" Value="360" />
    </Style>

    <Style x:Key="GridImage" TargetType="Image">
        <Setter Property="Stretch" Value="UniformToFill" />
    </Style>

    <DataTemplate x:Key="GridPosterTemplate">
        <Image Source="{Binding PosterPath, Converter={StaticResource ImagePathToFullPathConverter}, ConverterParameter=Poster}" Style="{StaticResource GridImage}" />
    </DataTemplate>

    <DataTemplate x:Key="GridProfileTemplate">
        <Image Source="{Binding ProfilePath, Converter={StaticResource ImagePathToFullPathConverter}, ConverterParameter=Profile}" Style="{StaticResource GridImage}" />
    </DataTemplate>

</ResourceDictionary>
