<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls">

    <!--  Main list pages  -->
    <Style x:Key="AdaptiveGrid" TargetType="controls:AdaptiveGridView">
        <Setter Property="DesiredWidth" Value="240" />
        <Setter Property="IsItemClickEnabled" Value="True" />
    </Style>

    <DataTemplate x:Key="AdaptiveGridMediumPosterTemplate">
        <Image Source="{Binding PosterPath, Converter={StaticResource ImagePathToFullPathConverter}, ConverterParameter=MediumPoster}" Style="{StaticResource AdaptiveGridImage}" />
    </DataTemplate>

    <DataTemplate x:Key="AdaptiveGridMediumProfileTemplate">
        <Image Source="{Binding ProfilePath, Converter={StaticResource ImagePathToFullPathConverter}, ConverterParameter=MediumProfile}" Style="{StaticResource AdaptiveGridImage}" />
    </DataTemplate>

    <Style x:Key="AdaptiveGridImage" TargetType="Image">
        <Setter Property="Stretch" Value="UniformToFill" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <!--  Detail pages, no stretch  -->
    <Style x:Key="AdaptiveGridNoStretch" TargetType="controls:AdaptiveGridView">
        <Setter Property="IsItemClickEnabled" Value="True" />
    </Style>

    <DataTemplate x:Key="AdaptiveGridNoStretchMediumPosterTemplate">
        <Image Source="{Binding PosterPath, Converter={StaticResource ImagePathToFullPathConverter}, ConverterParameter=MediumPoster}" Style="{StaticResource AdaptiveGridNoStretchImage}" />
    </DataTemplate>

    <DataTemplate x:Key="AdaptiveGridNoStretchMediumProfileTemplate">
        <Image Source="{Binding ProfilePath, Converter={StaticResource ImagePathToFullPathConverter}, ConverterParameter=MediumProfile}" Style="{StaticResource AdaptiveGridNoStretchImage}" />
    </DataTemplate>

    <Style x:Key="AdaptiveGridNoStretchImage" TargetType="Image">
        <Setter Property="Stretch" Value="UniformToFill" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Width" Value="160" />
    </Style>

</ResourceDictionary>
