<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls">

    <Style x:Key="AdaptiveGridItem" TargetType="controls:AdaptiveGridView">
        <Setter Property="DesiredWidth" Value="240" />
        <Setter Property="IsItemClickEnabled" Value="True" />
    </Style>

    <Style x:Key="AdaptiveGridRowItem" TargetType="controls:AdaptiveGridView">
        <Setter Property="DesiredWidth" Value="160" />
        <Setter Property="IsItemClickEnabled" Value="True" />
    </Style>

    <Style x:Key="AdaptiveGridImage" TargetType="Image">
        <Setter Property="Stretch" Value="UniformToFill" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <DataTemplate x:Key="GridMediumPosterTemplate">
        <Image Source="{Binding PosterPath, Converter={StaticResource ImagePathToFullPathConverter}, ConverterParameter=MediumPoster}" Style="{StaticResource AdaptiveGridImage}" />
    </DataTemplate>

    <DataTemplate x:Key="GridMediumProfileTemplate">
        <Image Source="{Binding ProfilePath, Converter={StaticResource ImagePathToFullPathConverter}, ConverterParameter=MediumProfile}" Style="{StaticResource AdaptiveGridImage}" />
    </DataTemplate>

</ResourceDictionary>
